<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anonymous Message</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      #container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 300px;
        min-width: 100px;
        width: 100%;
      }

      #messageInput {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
      }

      #submitButton {
        background: linear-gradient(45deg, aqua, #1c77b4);
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      #submitButton:hover {
        background: linear-gradient(45deg, #1c77b4, aqua);
      }

      #notice {
        color: #888;
        font-size: 12px;
      }
    </style>
  </head>
  <body>
    <div id="container">
      <form action="/sent" method="post">
        <h2>
          Sent Anonymous Message to
          <div style="color: rgb(0, 140, 255)">Chan Min</div>
        </h2>
        <input
          type="text"
          id="messageInput"
          placeholder="Type your message..."
          name="message"
          required
        />
        <button id="submitButton" onclick="sendMessage()">Send</button>
        <p id="notice">He won't ever know who you are.</p>
      </form>
    </div>
    <script>
      function sendMessage() {
        const messageInput = document.getElementById('messageInput');
        if (messageInput.value) {
          document.getElementById('submitButton').innerHTML = 'Sending...';
        }
      }
    </script>
  </body>
</html>
