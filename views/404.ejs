<!-- views/notfound.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Not Found</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      #container {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 300px;
        min-width: 100px;
        width: 100%;
        text-align: center;
      }

      h2 {
        color: #1c77b4; /* Blue color for the "Not Found" heading */
      }

      p {
        margin-top: 20px;
        font-size: 16px;
      }

      a {
        text-decoration: none;
        color: #ff0000; /* Red color for the link */
        font-weight: bold;
        margin-top: 20px;
        display: inline-block;
      }

      a:hover {
        color: #990000; /* Darker red color on hover */
      }
    </style>
  </head>
  <body>
    <div id="container">
      <h2>Not Found</h2>
      <p>The page you are looking for does not exist.</p>
      <p><a href="/">Go back to home</a></p>
    </div>
  </body>
</html>
